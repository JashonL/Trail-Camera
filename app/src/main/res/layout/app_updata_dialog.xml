<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="@dimen/dp_265"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/shape_white_rect">




        <ImageView
            android:id="@+id/iv_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_100"
            android:scaleType="fitXY"
            android:src="@drawable/app_updata_title"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="@dimen/dp_35"
            android:layout_height="@dimen/dp_35"
            android:src="@drawable/dialog_close"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_20"
            android:gravity="center"
            android:padding="@dimen/dp_5"
            android:text="@string/m273_version_upgrade"
            android:textColor="@color/white"
            android:textSize="@dimen/size_title_sp_14"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@+id/iv_title" />


        <TextView
            android:id="@+id/tv_dear_user"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_15"
            android:gravity="center"
            android:padding="@dimen/dp_5"
            android:text="@string/m274_dear_user"
            android:textColor="@color/color_text_66"
            android:textSize="@dimen/size_content_sp_14"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_title" />


        <TextView
            android:id="@+id/tv_circle_user"
            android:layout_width="@dimen/dp_10"
            android:layout_height="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@drawable/shape_circle_green"
            app:layout_constraintLeft_toLeftOf="@+id/tv_dear_user"
            app:layout_constraintTop_toTopOf="@+id/tv_tips_content" />


        <TextView
            android:id="@+id/tv_tips_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="@dimen/dp_5"
            android:text="@string/m275_version_upgrade"
            android:textColor="@color/color_text_66"
            android:textSize="@dimen/size_content_sp_14"
            app:layout_constraintLeft_toRightOf="@+id/tv_circle_user"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_dear_user" />


        <TextView
            android:id="@+id/tv_circle_version"
            android:layout_width="@dimen/dp_10"
            android:layout_height="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@drawable/shape_circle_green"
            app:layout_constraintLeft_toLeftOf="@+id/tv_dear_user"
            app:layout_constraintTop_toBottomOf="@+id/tv_tips_content" />


        <TextView
            android:id="@+id/tv_updata_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="@dimen/dp_5"
            android:text="@string/m276_latest_version"
            android:textColor="@color/color_text_66"
            android:textSize="@dimen/size_content_sp_14"
            android:textStyle="bold"
            app:layout_constraintLeft_toRightOf="@+id/tv_circle_user"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_tips_content" />

        <TextView
            android:id="@+id/tv_new_version"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="@dimen/dp_5"
            android:text="4.5.7"
            android:textColor="@color/color_text_66"
            android:textSize="@dimen/size_content_sp_14"
            app:layout_constraintLeft_toRightOf="@+id/tv_circle_user"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_updata_content" />


        <TextView
            android:id="@+id/tv_item_circle"
            android:layout_width="@dimen/dp_10"
            android:layout_height="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@drawable/shape_circle_green"
            app:layout_constraintLeft_toLeftOf="@+id/tv_dear_user"
            app:layout_constraintTop_toBottomOf="@+id/tv_new_version" />

        <TextView
            android:id="@+id/tv_updata_item"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="@dimen/dp_5"
            android:text="@string/m277_upgrade_log"
            android:textColor="@color/color_text_66"
            android:textSize="@dimen/size_content_sp_14"
            app:layout_constraintLeft_toRightOf="@+id/tv_circle_user"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_new_version" />


        <ScrollView
            android:id="@+id/tv_log"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:maxHeight="@dimen/dp_90"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            app:layout_constraintLeft_toLeftOf="@+id/tv_updata_item"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_updata_item">

            <TextView
                android:id="@+id/tv_log_real"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/color_text_99"
                android:textSize="@dimen/size_content_sp_12"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvLogNote" />
        </ScrollView>


        <View
            android:id="@+id/v_center"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_105"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_log" />

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_20"
            android:progressDrawable="@drawable/update_progress"
            app:layout_constraintLeft_toLeftOf="@+id/v_center"
            app:layout_constraintRight_toRightOf="@+id/v_center"
            app:layout_constraintTop_toTopOf="@+id/v_center" />

        <Button
            android:id="@+id/btn_up_date"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_20"
            android:background="@null"
            android:text="@string/m278_update_now"
            android:textColor="@color/white"
            android:textSize="@dimen/size_content_sp_12"
            app:layout_constraintLeft_toLeftOf="@+id/v_center"
            app:layout_constraintRight_toRightOf="@+id/v_center"
            app:layout_constraintTop_toTopOf="@+id/v_center" />

<!--

        <TextView
            android:id="@+id/tv_last_version"
            android:layout_width="@dimen/dp_10"
            android:layout_height="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@drawable/shape_circle_green"
            app:layout_constraintLeft_toLeftOf="@+id/iv_title"
            app:layout_constraintTop_toBottomOf="@+id/iv_title" />


        <TextView
            android:id="@+id/tv_aleady_newversion"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="@dimen/dp_5"
            android:text="@string/m280_no_newversion"
            android:textColor="@color/color_text_66"
            android:textSize="@dimen/size_content_sp_14"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/tv_last_version"
            app:layout_constraintLeft_toRightOf="@+id/tv_last_version"
            app:layout_constraintTop_toTopOf="@+id/tv_last_version" />
-->


    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>