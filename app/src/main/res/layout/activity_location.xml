<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <include layout="@layout/toobar_title"/>
    <RelativeLayout
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@+id/app_toolbar"
        app:layout_constraintBottom_toTopOf="@+id/tvMarker"
        android:layout_height="0dp">
        <fragment
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/map"
            class="com.google.android.gms.maps.SupportMapFragment"
            />
        <ImageView
            android:id="@+id/ivCenter"
            android:layout_width="22dp"
            android:layout_height="44dp"
            android:paddingBottom="22dp"
            android:src="@drawable/map_mark"
            android:layout_centerInParent="true"
            />
        <!--头部-->
        <LinearLayout
            android:id="@+id/llSearch"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:orientation="horizontal"
            android:background="@drawable/shape_green_stroke"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            >
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_30"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                >

                <EditText
                    android:id="@+id/etContent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:hint="@string/m271_please_enter_location"
                    android:lines="1"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingRight="@dimen/dp_40"
                    android:textColor="@color/color_text_66"
                    android:textColorHint="@color/color_text_66"
                    android:textSize="@dimen/size_content_note" />
            </RelativeLayout>
            <FrameLayout
                android:id="@+id/flSearch"
                android:layout_width="@dimen/dp_45"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="@dimen/dp_45"
                    android:layout_height="@dimen/dp_20"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/oss_search"
                    />
            </FrameLayout>
        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/poiSugRV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/llSearch"
            android:background="@drawable/shape_white_rect"
            android:layout_alignLeft="@+id/llSearch"
            android:layout_alignRight="@+id/llSearch"
            />
        <EditText
            android:id="@+id/etSearch"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_5"
            android:visibility="gone"
            />
        <SearchView
            android:id="@+id/search"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_5"
            android:layout_below="@+id/etSearch"
            android:background="@color/gray_eeeeeee"
            android:visibility="gone"
            />
        <ImageView
            android:id="@+id/ivReset"
            android:layout_width="@dimen/dp_35"
            android:layout_height="@dimen/dp_35"
            android:src="@drawable/map_reset"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginBottom="@dimen/dp_10"
            />
    </RelativeLayout>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvMarker"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:minHeight="@dimen/dp_40"
        android:background="@color/gray_eeeeeee"
        android:textColor="@color/color_text_66"
        android:gravity="center_vertical"
        android:textSize="@dimen/size_content_sp_14"
        app:layout_constraintBottom_toBottomOf="parent"
        app:autoSizeMaxTextSize="@dimen/size_content_sp_14"
        app:autoSizeTextType="uniform"
        app:autoSizeMinTextSize="@dimen/size_content_note"
        />
</androidx.constraintlayout.widget.ConstraintLayout>


