<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/toobar_title" />


    <View
        android:id="@+id/v_pop"
        android:layout_width="@dimen/dp_10"
        android:layout_height="1dp"
        android:layout_gravity="end" />


    <TextView
        android:id="@+id/tv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:padding="@dimen/dp_10"
        android:text="@string/m37_select_camera"
        android:textColor="@color/color_text_33"
        android:textSize="@dimen/size_content_sp_12" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rlv_plans_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_10"
        android:background="@drawable/shape_white_rect"
        />




    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/change"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_75"
            android:layout_margin="@dimen/dp_5"
            android:background="@drawable/view_ripple"
            android:drawableTop="@drawable/plan_edit"
            android:gravity="center"
            android:padding="@dimen/dp_5"
            android:text="@string/m38_change"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/suspend"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/suspend"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_75"
            android:layout_margin="@dimen/dp_5"
            android:background="@drawable/view_ripple"
            android:drawableTop="@drawable/plan_suspend"
            android:gravity="center"
            android:padding="@dimen/dp_5"
            android:text="@string/m39_suspend"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/change"
            app:layout_constraintRight_toLeftOf="@+id/remove"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/remove"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_75"
            android:layout_margin="@dimen/dp_5"
            android:background="@drawable/view_ripple"
            android:drawableTop="@drawable/plan_detele"
            android:gravity="center"
            android:padding="@dimen/dp_5"
            android:text="@string/m40_remove"
            app:layout_constraintLeft_toRightOf="@+id/suspend"
            app:layout_constraintRight_toLeftOf="@+id/back"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/back"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_75"
            android:layout_margin="@dimen/dp_5"
            android:background="@drawable/view_ripple"
            android:drawableTop="@drawable/plan_cancel"
            android:gravity="center"
            android:padding="@dimen/dp_5"
            android:text="@string/m41_back"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/remove"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>