<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_pop_edit"
    android:orientation="vertical">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_5"
            android:src="@drawable/pop_close"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/tv_selected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_5"
            android:text="@string/m211_selected"
            android:textColor="@color/white"
            android:textSize="@dimen/size_title_sp_14"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/iv_camera"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/tv_selected_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_5"
            android:text="0"
            android:textColor="@color/white"
            android:textSize="@dimen/size_title_sp_14"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/tv_selected"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/tv_select_all"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_5"
            android:drawableTop="@drawable/selected_all"
            android:gravity="center"
            android:maxLines="1"
            android:drawablePadding="@dimen/dp_10"
            android:text="@string/m212_selected_all"
            android:textColor="@color/white"
            android:textSize="@dimen/size_content_sp_10"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/tv_selected_num"
            app:layout_constraintRight_toLeftOf="@+id/tv_download"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/tv_download"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_5"
            android:drawableTop="@drawable/down"
            android:gravity="center"
            android:drawablePadding="@dimen/dp_10"
            android:maxLines="1"
            android:text="@string/m213_download"
            android:textColor="@color/white"
            android:textSize="@dimen/size_content_sp_10"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/tv_select_all"
            app:layout_constraintRight_toLeftOf="@+id/tv_collection"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/tv_collection"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_5"
            android:drawableTop="@drawable/fav"
            android:gravity="center"
            android:drawablePadding="@dimen/dp_10"
            android:maxLines="1"
            android:text="@string/m21_collection"
            android:textColor="@color/white"
            android:textSize="@dimen/size_content_sp_10"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/tv_download"
            app:layout_constraintRight_toLeftOf="@+id/tv_selected_delete"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/tv_selected_delete"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_5"
            android:drawableTop="@drawable/remove"
            android:gravity="center"
            android:maxLines="1"
            android:layout_marginEnd="@dimen/dp_5"
            android:drawablePadding="@dimen/dp_10"
            android:text="@string/m22_delete"
            android:textColor="@color/white"
            android:textSize="@dimen/size_content_sp_10"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/tv_collection"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>