<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/toobar_title" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <View
            android:id="@+id/v_circle"
            android:layout_width="@dimen/dp_5"
            android:layout_height="@dimen/dp_5"
            android:layout_marginStart="@dimen/dp_20"
            android:background="@drawable/shape_circle_green"
            app:layout_constraintBottom_toBottomOf="@+id/tv_name"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_name" />


        <TextView
            android:id="@+id/tv_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/dp_10"
            android:text="@string/m41_back"
            android:textColor="@color/color_text_33"
            android:textSize="@dimen/size_content_sp_14"
            app:layout_constraintLeft_toRightOf="@+id/v_circle"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/tv_imei"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/m41_back"
            android:textColor="@color/color_text_66"
            android:textSize="@dimen/size_content_sp_12"
            app:layout_constraintLeft_toRightOf="@+id/v_circle"
            app:layout_constraintTop_toBottomOf="@+id/tv_name" />


        <TextView
            android:id="@+id/tv_iccid"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/m41_back"
            android:textColor="@color/color_text_66"
            android:textSize="@dimen/size_content_sp_12"
            app:layout_constraintLeft_toRightOf="@+id/v_circle"
            app:layout_constraintTop_toBottomOf="@+id/tv_imei" />


        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_10"
            android:src="@drawable/shape_circle_green"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_imei" />


        <View
            android:id="@+id/v_bill_of_camera"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_120"
            android:layout_margin="@dimen/dp_20"
            android:background="@drawable/shape_white_stroke"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_iccid" />


        <View
            android:id="@+id/v_photo_num"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_120"
            android:layout_margin="@dimen/dp_20"
            android:background="@drawable/shape_white_stroke"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/v_bill_of_camera" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>