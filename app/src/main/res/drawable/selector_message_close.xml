<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">


    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/color_message_press"/>
            <corners android:bottomLeftRadius="@dimen/dp_10"
                android:topRightRadius="@dimen/dp_10"/>
        </shape>
    </item>




    <!--正常-->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/color_message_close"/>
            <corners
                android:topRightRadius="@dimen/dp_10" android:bottomLeftRadius="@dimen/dp_10"/>
        </shape>
    </item>


</selector>