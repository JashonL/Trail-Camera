<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--注册页面-->
    <style name="style_linearlayout_login_register">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_40</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingLeft">@dimen/dp_10</item>
        <item name="android:paddingRight">@dimen/dp_10</item>
        <item name="android:layout_marginLeft">@dimen/dp_40</item>
        <item name="android:layout_marginRight">@dimen/dp_40</item>
        <item name="android:background">@drawable/shape_login_corner_no_stroke</item>
    </style>

    <style name="style_imageview_register_icon">
        <item name="android:layout_width">@dimen/dp_15</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginLeft">@dimen/dp_8</item>
        <item name="android:layout_marginRight">@dimen/dp_8</item>
    </style>


    <style name="style_edittext_register_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginLeft">@dimen/dp_5</item>
        <item name="android:background">@null</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:lines">1</item>
        <item name="android:textColor">@color/color_text_00</item>
        <item name="android:textSize">@dimen/size_title_sp_12</item>
        <item name="android:textColorHint">@color/color_text_99</item>
    </style>


    <!--加载动画属性-->
    <style name="dialogStyle" parent="Theme.AppCompat.Dialog">
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="dialogWindowAnim" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/dialog_enter_anim</item>
        <item name="android:windowExitAnimation">@anim/dialog_exit_anim</item>
    </style>




</resources>